{% extends 'base.html.twig' %}

{% block title %}Event
{% endblock %}

{% block body %}
	<div class="text-center my-5">
		<img src="{{ asset("images/" ~ event.image) }}" class="rounded shadow-lg">
	</div>
	<h1 class="display-6 my-5 text-center">{{ event.name }}</h1>
	<div class="row">
		<div class="col-2"></div>
		<div class="col-8">
			<table class="table">
				<tbody>

					<tr>
						<th>Description</th>
						<td>{{ event.description }}</td>
					</tr>
					<tr>
						<th>Event Type</th>
						<td>{{ event.type }}</td>
					</tr>

					<tr>
						<th>Capacity</th>
						<td>{{ event.capacity }}
							pax</td>
					</tr>
					<tr>
						<th>Email</th>
						<td>{{ event.email }}</td>
					</tr>
					<tr>
						<th>Tel.</th>
						<td>{{ event.phoneNumber }}</td>
					</tr>

					<tr>
						<th>Web</th>
						<td>{{ event.url }}</td>
					</tr>

					<tr>
						<th>Address</th>
						<td>{{ event.address }}</td>
					</tr>
					<tr>
						<th>Date</th>
						<td>{{ event.date ? event.date|date('d-m-Y H:i') : '' }}h</td>
					</tr>
				</tbody>
			</table>
			<div class="text-center">
				<a href="{{ path('app_event_index') }}" class="btn btn-secondary btn-sm my-5 ">Back to Homepage</a>
			</div>
		</div>
		<div class="col-2"></div>
	</div>


{% endblock %}
